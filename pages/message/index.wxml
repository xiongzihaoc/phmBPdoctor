<view class="box">
	<!-- 列表 -->
	<block wx:for="{{messageList}}" wx:key="id">
		<view class="messageList" bindtap="goChat">
			<!-- 头像 -->
			<view class="avatar">
				<image src="/images/finish.png"></image>
			</view>
			<!-- 姓名 消息记录 -->
			<view class="instr">
				<view class="userName">
					<text>{{item.name}}</text>
				</view>
				<view class="messageIns">
					<text>这两天情况好多了，谢谢医生</text>
				</view>
			</view>
			<!-- 未读黄点 -->
			<view class="orange">
			</view>
			<!-- 今天显示时间 一周内显示周日期 超过一周显示 月份 -->
			<view class="date">
				9:42</view>
		</view>
	</block>

</view>